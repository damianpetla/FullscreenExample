<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/adcontent" android:background="#FF9800">

        <TextView
                android:text="Fixed Ad"
                android:layout_width="200dp"
                android:layout_height="200dp" android:id="@+id/adtext" android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:gravity="center"
                android:background="#FFFFFF"/>
    </FrameLayout>
    <TextView
            android:text="Sticky Label"
            android:layout_width="match_parent"
            android:layout_height="24dp" android:id="@+id/adlabel" android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:background="#FFEB3B"/>
</FrameLayout>